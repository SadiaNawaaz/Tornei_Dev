    private void ValidateNumber(string inputValue)
    {
        // Use InvokeAsync to run the asynchronous logic
        InvokeAsync(async () =>
        {
            if (int.TryParse(inputValue, out _))
            {
                // It's a valid number
                errorMessage = "";
            }
            else
            {
                // It's not a valid number
