    // Inizializzazione
    #region Initialization
    int CodAnagrafica = 0;

    // Inizializzazione pagina
    protected override void OnInitialized()
    {
        // [LUCA]:
        // Are you sure you need a procedure to indicate showing the spinner?
        // Shouldn't it be better to set the message (object name) here.visible=true?
        ShowSppiner(); //Mostra rotellina

